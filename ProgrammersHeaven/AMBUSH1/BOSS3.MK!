DECLARE SUB Gameover ()
DECLARE SUB Charge1 ()
DECLARE SUB Gunswitch ()
DECLARE SUB Center (ROW, TEXT$)
COMMON NOGUNS, LEVEL, GUN, BOSS, X, Y, AMMO, SNOT, CHARGE, FLAME, BEANS
COMMON FLAMETHROWER, BAKEDBEANS, CHARACTER, CIRC%, BIG%, HIT%, EXTRA%
COMMON KEYB, FIRE, BEAN, HITS, MISSES, SCORE, BOMB, OUCHYOU, OUCH
COMMON INI, SPD, INI1$, INI2$, INI3$, TOILET, ENEMIES, ARMORA, BOW, ARROW
COMMON names, MISSLE, BAZOOKA, BZKA
DIM ROW AS INTEGER
DIM CIRC%(1000)
DIM HIT%(1000)
DIM EXTRA%(2000)
DIM BIG%(24500)
BOSS = 200
TIMES = -1
CIRCLE (X, Y), 5, 8
GET (X - 5, Y - 5)-(X + 5, Y + 5), CIRC%
CIRCLE (X, Y), 5, 0
LINE (0, 22)-(319, 172), 0, BF
LOCATE 2, 1: PRINT STRING$(13, " ")
LOCATE 1, 1: PRINT STRING$(29, " ")
LINE (0, 21)-(319, 172), 0, BF
X1 = 104: X2 = 119: Y1 = 3: Y2 = 21
CC = 16
FOR I = 1 TO 10
LINE (X1, Y1)-(X2, Y2), 15, B
LINE (X1 + 1, Y1 + 1)-(X2 - 1, Y2 - 1), CC, BF
X1 = X1 + 15: X2 = X2 + 15
CC = CC + 1.7
NEXT
GOSUB HEALTH
LINE (108, 170)-(124, 174), 8, B
LINE (150, 174)-(166, 170), 8, B
LINE (157, 167)-(157, 169), 8
LINE (150, 169)-(150, 167), 8
LINE (124, 170)-(124, 168), 8
LINE (117, 168)-(117, 170), 8
LINE (115, 168)-(126, 168), 8
LINE (148, 167)-(159, 167), 8
LINE (163, 120)-(162, 141), 8
LINE (162, 141)-(160, 157), 8
LINE (160, 157)-(158, 167), 8
LINE (148, 167)-(146, 155), 8
LINE (146, 155)-(142, 138), 8
LINE (142, 138)-(140, 130), 8
LINE (139, 129)-(130, 129), 8
LINE (130, 129)-(128, 153), 8
LINE (128, 153)-(126, 168), 8
LINE (115, 168)-(112, 144), 8
LINE (112, 144)-(109, 122), 8
LINE (109, 122)-(109, 120), 8
LINE (158, 167)-(159, 167), 16
LINE (163, 120)-(109, 120), 8
LINE (111, 102)-(108, 107), 8
LINE (108, 107)-(105, 112), 8
LINE (105, 112)-(105, 115), 8
LINE (105, 115)-(107, 118), 8
LINE (107, 118)-(109, 120), 8
LINE (161, 102)-(165, 107), 8
LINE (165, 107)-(167, 110), 8
LINE (167, 110)-(167, 115), 8
LINE (167, 115)-(166, 117), 8
LINE (166, 117)-(163, 120), 8
LINE (111, 101)-(114, 84), 8
LINE (161, 102)-(154, 84), 8
LINE (171, 124)-(164, 119), 8
LINE (172, 123)-(177, 121), 8
LINE (177, 121)-(173, 117), 8
LINE (168, 115)-(172, 98), 8
LINE (174, 116)-(177, 103), 8
LINE (177, 103)-(179, 97), 8
LINE (178, 96)-(176, 93), 8
LINE (176, 93)-(171, 88), 8
LINE (171, 88)-(166, 84), 8
LINE (165, 84)-(160, 79), 8
LINE (161, 88)-(165, 84), 8
LINE (155, 85)-(166, 91), 8
LINE (166, 91)-(171, 97), 8
LINE (160, 79)-(148, 71), 8
LINE (148, 71)-(142, 68), 8
LINE (141, 63)-(141, 71), 8
LINE (131, 71)-(131, 63), 8
LINE (111, 74)-(114, 72), 8
LINE (115, 71)-(130, 68), 8
LINE (139, 76)-(148, 71), 8
LINE (139, 76)-(127, 76), 8
LINE (127, 76)-(123, 73), 8
LINE (123, 73)-(121, 70), 8
CIRCLE (135, 53), 12, 8, , , 1.2
CIRCLE (132, 49), 2, 8, , , 1
CIRCLE (139, 49), 2, 8, , , 1
LINE (132, 49)-(132, 49), 8
LINE (139, 49)-(139, 49), 8
LINE (136, 51)-(139, 54), 8
LINE (139, 54)-(136, 54), 8
LINE (132, 56)-(140, 59), 8, B
GET (86, 59)-(145, 110), EXTRA%
GOSUB FIRST
GOSUB TALKBOSS
X1 = 104: X2 = 119: Y1 = 26: Y2 = 44
CC = 195
FOR I = 1 TO 10
LINE (X1, Y1)-(X2, Y2), 15, B
LINE (X1 + 1, Y1 + 1)-(X2 - 1, Y2 - 1), CC, BF
X1 = X1 + 15: X2 = X2 + 15
CC = CC + 1.7
NEXT
PUT (X - 5, Y - 5), CIRC%, XOR:
PLAY "T155MBL8O1F#FF#FED#EFF#FF#FED#EF"
BOSSINKY: Q$ = INKEY$
IF TIMES = 0 AND GUNSHOOT >= SPD / 5 + SPD / 5 + SPD / 5 / 3 THEN GOSUB HIT
IF TIMES = 0 AND GUNSHOOT < SPD / 5 + SPD / 5 + SPD / 5 / 3 THEN
GUNSHOOT = GUNSHOOT + 1
END IF
IF GUN = 1 AND CHARGE < 10 AND Q$ = "c" THEN Charge1: GOTO BOSSINKY
IF OUCH >= 10 THEN GOTO KILLBOSS
IF OUCH >= 1 THEN GOSUB HITBOSS
IF OUCHYOU >= 10 THEN
Gameover
CHAINPLACE = 3: CLS
COLOR 15
LOCATE 10, 12: PRINT "Please wait while"
LOCATE 12, 12: PRINT "Ambush is loading"
CHAIN "AMBUSH.bas"
END IF
IF TIMES = -1 THEN TIME = TIME + 1
IF FIRST = 1 AND SECOND = 0 AND TIME >= SPD / 5 THEN GOSUB SECOND
IF THIRD = 1 AND SECOND = 0 AND TIME >= SPD / 5 + SPD / 5 / 2 THEN
GOSUB SECOND
END IF
IF THIRD = 0 AND SECOND = 1 AND TIME >= SPD / 5 + SPD / 5 / 3 THEN
GOSUB THIRD
END IF
IF THIRD = 1 AND SECOND = 1 AND TIME >= SPD / 5 + SPD / 5 / 1.5 THEN
GOSUB FIRST: TIMES = 0
END IF
LOCATE 1, 2: PRINT "Score :"; SCORE
LOCATE 2, 2: PRINT "Bombs :"; BOMB
IF GUN = 1 AND CHARACTER <> 5 THEN LOCATE 23, 2: PRINT "Ammo  :"; AMMO
IF GUN = 1 AND CHARACTER = 5 THEN
LOCATE 23, 2: PRINT "Dust  :"; : COLOR 14: PRINT AMMO
END IF
IF GUN = 2 THEN LOCATE 23, 2: PRINT "Snot  :"; SNOT
IF BAKEDBEANS = 500 THEN LOCATE 23, 2: PRINT "Beans :"; BEAN
IF FLAMETHROWER = 500 THEN LOCATE 23, 2: PRINT "Fire  :"; FIRE
LOCATE 23, 15: PRINT "Kills :"; HITS
LOCATE 23, 27: PRINT "Misses :"; MISSES

N2:
    Q$ = UCASE$(Q$)
    DEF SEG = 0
    POKE 1047, Numlock
    DEF SEG
IF LEN(Q$) = 2 THEN GOTO NXT1
Q$ = LCASE$(Q$)
IF Q$ = " " THEN GOSUB FIRE
IF Q$ = "p" THEN GOSUB PAUSE
IF Q$ = "s" THEN Gunswitch
IF Q$ = "b" AND BOMB > 0 THEN GOSUB BOOM
IF Q$ = CHR$(27) THEN
GET (0, 21)-(319, 172), BIG%
LOCATE 10, 14: COLOR 15: PRINT "Are you sure ?"
DO
END$ = INKEY$
LOOP UNTIL END$ <> ""
PUT (0, 21), BIG%, PSET
IF UCASE$(LEFT$(END$, 1)) = "Y" THEN CLS : END
COLOR 14
GOTO BOSSINKY
END IF
GOTO BOSSINKY
NXT1:
IF LEN(Q$) = 2 THEN FK% = ASC(RIGHT$(Q$, 1))
IF FK% <> 71 AND FK% <> 72 AND FK% <> 73 AND FK% <> 75 THEN
IF FK% <> 77 AND FK% <> 79 AND FK% <> 80 AND FK% <> 81 THEN GOTO BOSSINKY
END IF
IF FK% = 71 AND X = 30 OR FK% = 71 AND Y = 30 THEN
PUT (X - 5, Y - 5), CIRC%, XOR: PUT (X - 5, Y - 5), CIRC%, XOR: GOTO BOSSINKY
END IF
IF FK% = 72 AND Y = 30 THEN
PUT (X - 5, Y - 5), CIRC%, XOR: PUT (X - 5, Y - 5), CIRC%, XOR: GOTO BOSSINKY
END IF
IF FK% = 73 AND X = 280 OR FK% = 73 AND Y = 30 THEN
PUT (X - 5, Y - 5), CIRC%, XOR: PUT (X - 5, Y - 5), CIRC%, XOR: GOTO BOSSINKY
END IF
IF FK% = 75 AND X = 30 THEN
PUT (X - 5, Y - 5), CIRC%, XOR:  PUT (X - 5, Y - 5), CIRC%, XOR: GOTO BOSSINKY
END IF
IF FK% = 77 AND X = 280 THEN
PUT (X - 5, Y - 5), CIRC%, XOR: PUT (X - 5, Y - 5), CIRC%, XOR: GOTO BOSSINKY
END IF
IF FK% = 79 AND X = 30 OR FK% = 79 AND Y = 160 THEN
PUT (X - 5, Y - 5), CIRC%, XOR: PUT (X - 5, Y - 5), CIRC%, XOR: GOTO BOSSINKY
END IF
IF FK% = 80 AND Y = 160 THEN
PUT (X - 5, Y - 5), CIRC%, XOR: PUT (X - 5, Y - 5), CIRC%, XOR: GOTO BOSSINKY
END IF
IF FK% = 81 AND X = 280 OR FK% = 81 AND Y = 160 THEN
PUT (X - 5, Y - 5), CIRC%, XOR: PUT (X - 5, Y - 5), CIRC%, XOR: GOTO BOSSINKY
END IF
IF FK% = 71 THEN
PUT (X - 5, Y - 5), CIRC%, XOR: X = X - 10
Y = Y - 10: PUT (X - 5, Y - 5), CIRC%, XOR
END IF
IF FK% = 72 THEN
PUT (X - 5, Y - 5), CIRC%, XOR: Y = Y - 10: PUT (X - 5, Y - 5), CIRC%, XOR
END IF
IF FK% = 73 THEN
PUT (X - 5, Y - 5), CIRC%, XOR
X = X + 10: Y = Y - 10: PUT (X - 5, Y - 5), CIRC%, XOR
END IF
IF FK% = 75 THEN
PUT (X - 5, Y - 5), CIRC%, XOR
X = X - 10: PUT (X - 5, Y - 5), CIRC%, XOR
END IF
IF FK% = 77 THEN
PUT (X - 5, Y - 5), CIRC%, XOR
X = X + 10: PUT (X - 5, Y - 5), CIRC%, XOR
END IF
IF FK% = 79 THEN
PUT (X - 5, Y - 5), CIRC%, XOR
X = X - 10: Y = Y + 10: PUT (X - 5, Y - 5), CIRC%, XOR
END IF
IF FK% = 80 THEN
PUT (X - 5, Y - 5), CIRC%, XOR: Y = Y + 10: PUT (X - 5, Y - 5), CIRC%, XOR
END IF
IF FK% = 81 THEN
PUT (X - 5, Y - 5), CIRC%, XOR
X = X + 10: Y = Y + 10: PUT (X - 5, Y - 5), CIRC%, XOR
END IF
GOTO BOSSINKY
PAUSE:
GET (0, 21)-(319, 172), BIG%
COLOR 15
LOCATE 10, 17: PRINT "PAUSE"
DO
AA$ = INKEY$
LOOP UNTIL UCASE$(AA$) = "P" OR UCASE$(AA$) = "S"
IF UCASE$(AA$) = "S" THEN PUT (0, 21), BIG%, PSET: Gunswitch: GOTO PAUSE
COLOR 14
PUT (0, 21), BIG%, PSET
RETURN

FIRE:
IF GUN = 1 AND AMMO = 0 THEN
PLAY "MBO6T255L64FG"
CHARGE = -.2: Charge1
RETURN
END IF
IF GUN = 2 AND SNOT = 0 THEN
PLAY "MBO6T255L64FG"
RETURN
END IF
IF BAKEDBEANS = 500 AND BEAN = 0 THEN
PLAY "MBO6T255L64FG"
RETURN
END IF
IF FLAMETHROWER = 500 AND FIRE = 0 THEN
PLAY "MBO6T255L64FG"
RETURN
END IF
FOR I = 1 TO CHARGE
PLAY "MBT255L64O0Cp64O0Dp64O0Cp64"
NEXT
IF CHARGE >= 1 THEN
GET (X - 20, Y - 20)-(X + 20, Y + 20), EXTRA%
HGLK = CHARGE
FOR I = 1 TO CHARGE + 10
CIRCLE (X, Y), HGLK + 10, HGLK + 21
HGLK = HGLK - 1
NEXT
PUT (X - 20, Y - 20), EXTRA%, PSET
END IF
GET (X - 5, Y - 5)-(X + 5, Y + 5), HIT%
CIRCLE (X, Y), 3, 18
CIRCLE (X, Y), 2, 18
CIRCLE (X, Y), 1, 18
CIRCLE (X, Y), 3, 19
CIRCLE (X, Y), 2, 30
CIRCLE (X, Y), 1, 30
CIRCLE (X, Y), 3, 20
CIRCLE (X, Y), 2, 29
CIRCLE (X, Y), 1, 29
CIRCLE (X, Y), 3, 28
IF CHARACTER = 5 AND GUN = 1 THEN
PLAY "MBT255L32O5CEDFEGFAGBA>C<B>DCED": GGGGG = 2
END IF
IF BEANS = 0 THEN GGGGG = 2
IF GGGGG = 2 THEN GOTO W
IF GUN = 1 THEN PLAY "MBO0T255L64CDCDCDCDCDCD"
IF GUN = 2 THEN PLAY "T255O1L64CDEFG"
IF BAKEDBEANS = 500 THEN
PLAY "t255mbl64o0dp55cp55dp55cp55dp55cp55dp55cp55dp55cp55dp55c"
END IF
IF FLAMETHROWER = 500 THEN PLAY "T255MBL64O1CO0AO0CO0AO1AO0C"
W:
GGGGG = 0
PUT (X - 5, Y - 5), HIT%, PSET
IF X <> EROW AND Y < 280 AND Y > 20 AND GUN = 2 OR Y <> ECOL THEN
IF Y < 280 AND Y > 20 AND GUN = 2 THEN
CIRCLE (X, Y), 2, 120
PAINT (X, Y), 120
FOR I = 1 TO 25
RX = INT(RND * 8) + 1
RY = INT(RND * 8) + 1
A = INT(RND * 2) + 1
IF RX <= 4 THEN RX = -RX
IF RY <= 4 THEN RY = -RX
IF RX >= 5 THEN RX = RX - 4
IF RY >= 5 THEN RY = RX - 4
IF A = 1 THEN PSET (X + RX, Y - RY), 120
IF A = 2 THEN PSET (X - RX, Y + RY), 120
NEXT
END IF
END IF
IF X <> EROW AND Y < 280 AND Y > 20 AND BAKEDBEANS = 500 THEN
IF X < 130 OR Y <> ECOL AND Y < 280 AND Y > 20 AND BAKEDBEANS = 500 THEN
PUT (X - 5, Y - 5), CIRC%
IF X >= 130 AND X <= 140 AND Y >= 50 AND Y <= 60 THEN GOTO NXT15
Q = 4
M = 25
FOR I = 1 TO 5
CIRCLE (X - 4, Y - 4), Q, M, 6.283184, 4.712388, 1
CIRCLE (X - 4, Y + 3), Q, M, 1.570796, 6.283184, 1
CIRCLE (X + 4, Y + 3), Q, M, 3.141592, 1.570796, 1
CIRCLE (X + 4, Y - 4), Q, M, 4.712388, 3.141592, 1
CIRCLE (X, Y), Q, M, , , 1
Q = Q - 1
M = M + 1.6
NEXT
NXT15:
PUT (X - 5, Y - 5), CIRC%
END IF
END IF
IF X <> EROW AND Y < 280 AND Y > 20 AND CHARACTER = 5 THEN
IF GUN = 1 OR Y <> ECOL AND Y < 280 AND Y > 20 THEN
IF CHARACTER = 5 AND GUN = 1 THEN
GET (X - 20, Y - 10)-(X + 20, Y + 10), EXTRA%
Q = 4
M = 27
FOR I = 1 TO 5
CIRCLE (X - 4, Y - 4), Q, M, 6.283184, 4.712388, 1
CIRCLE (X - 4, Y + 4), Q, M, 1.570796, 6.283184, 1
CIRCLE (X + 4, Y + 4), Q, M, 3.141592, 1.570796, 1
CIRCLE (X + 4, Y - 4), Q, M, 4.712388, 3.141592, 1
CIRCLE (X - 14, Y - 4), Q, M, 6.283184, 4.712388, 1
CIRCLE (X - 14, Y + 4), Q, M, 1.570796, 6.283184, 1
CIRCLE (X + 14, Y + 4), Q, M, 3.141592, 1.570796, 1
CIRCLE (X + 14, Y - 4), Q, M, 4.712388, 3.141592, 1
CIRCLE (X + 14, Y - 4), Q, M, 6.283184, 4.712388, 1
CIRCLE (X + 14, Y + 4), Q, M, 1.570796, 6.283184, 1
CIRCLE (X - 14, Y + 4), Q, M, 3.141592, 1.570796, 1
CIRCLE (X - 14, Y - 4), Q, M, 4.712388, 3.141592, 1
CIRCLE (X, Y), Q, M
CIRCLE (X - 9, Y), Q, M
CIRCLE (X + 9, Y), Q, M
Q = Q - 1
M = M + 1
NEXT
PUT (X - 20, Y - 10), EXTRA%, PSET
END IF
END IF
END IF
IF X <> EROW AND FLAMETHROWER OR Y <> ECOL AND FLAMETHROWER = 500 THEN
PUT (X - 5, Y - 5), CIRC%
Q = 2.2: QQQ = .3: QQQQ = 33
FOR I = 1 TO 22
CIRCLE (X, Y + 1), QQQ, QQQQ, , , Q
QQQ = QQQ + .3: QQQQ = QQQQ + .5: Q = Q - .05
NEXT I
Q = 0: QQQ = .1: QQQQ = 36
FOR I = 1 TO 22
CIRCLE (X, Y), QQQ, QQQQ, , , Q
QQQ = QQQ + .39: QQQQ = QQQQ + .4: Q = Q + .1
NEXT I
PUT (X - 5, Y - 5), CIRC%
END IF
IF BAKEDBEANS = 500 AND X >= 130 AND X <= 140 AND Y >= 50 AND Y <= 60 THEN
PUT (X - 5, Y - 5), CIRC%
Q = 4
M = 112
FOR I = 1 TO 5
CIRCLE (X - 4, Y - 4), Q, M, 6.283184, 4.712388, 1
CIRCLE (X - 4, Y + 3), Q, M, 1.570796, 6.283184, 1
CIRCLE (X + 4, Y + 3), Q, M, 3.141592, 1.570796, 1
CIRCLE (X + 4, Y - 4), Q, M, 4.712388, 3.141592, 1
CIRCLE (X, Y), Q, M, , , 1
Q = Q - 1
M = M + 1.6
NEXT
OUCH = OUCH + .5: GOSUB HITBOSS
PUT (X - 5, Y - 5), CIRC%
END IF
IF GUN = 2 AND X >= 130 AND X <= 140 AND Y >= 50 AND Y <= 60 THEN
CIRCLE (X, Y), 3, 120
PAINT (X, Y), 120
FOR I = 1 TO 25
RX = INT(RND * 8) + 1
RY = INT(RND * 8) + 1
A = INT(RND * 2) + 1
IF RX <= 4 THEN RX = -RX
IF RY <= 4 THEN RY = -RX
IF RX >= 5 THEN RX = RX - 4
IF RY >= 5 THEN RY = RX - 4
IF A = 1 THEN PSET (X + RX, Y - RY), 120
IF A = 2 THEN PSET (X - RX, Y + RY), 120
NEXT
OUCH = OUCH + .2: GOSUB HITBOSS
END IF
IF GUN = 1 THEN AMMO = AMMO - 1
IF GUN = 2 THEN SNOT = SNOT - 1
IF FLAMETHROWER = 500 THEN FIRE = FIRE - 1
IF BAKEDBEANS = 500 THEN BEAN = BEAN - 1
IF GUN = 1 AND CHARACTER = 8 THEN AMMO = AMMO + 1
IF GUN = 2 AND CHARACTER = 8 THEN SNOT = SNOT + 1
IF FLAMETHROWER = 500 AND CHARACTER = 8 THEN FIRE = FIRE + 1
IF BAKEDBEANS = 500 AND CHARACTER = 8 THEN BEAN = BEAN + 1
CHARGE = -.2: Charge1
RETURN

BOOM:
GET (0, 21)-(319, 172), BIG%
FOR I = 1 TO 15
PLAY "MBT255L64O0Cp64O0Dp64O0Cp64"
NEXT
FOR NEWATTR = 0 TO 63
PALETTE 0, NEWATTR
FOR Q = 1 TO 25
NEXT
NEXT
FOR NEWATTR = 63 TO 0 STEP -1
PALETTE 0, NEWATTR
FOR Q = 1 TO 25
NEXT
NEXT
BOMBING = 1
BOMB = BOMB - 1
IF CHARACTER = 8 THEN BOMB = BOMB + 1
BOMBING = 0
RETURN

GETHIT:
GET (0, 21)-(319, 172), BIG%
PLAY "T255MBL64O0CDCDCDCDCDCDCDCDCDCDCDC"
PUT (0, 25), BIG%, PSET
PUT (0, 21), BIG%, PSET
LINE (0, 21)-(319, 24), 0, BF
LINE (0, 173)-(319, 200), 0, BF
LOCATE 2, 2: PRINT "Bombs :"; BOMB
IF GUN = 1 AND CHARACTER <> 5 THEN LOCATE 23, 2: PRINT "Ammo  :"; AMMO
IF GUN = 1 AND CHARACTER = 5 THEN
LOCATE 23, 2: PRINT "Dust  :"; : COLOR 14: PRINT AMMO
END IF
IF GUN = 2 THEN LOCATE 23, 2: PRINT "Snot  :"; SNOT
IF BAKEDBEANS = 500 THEN LOCATE 23, 2: PRINT "Beans :"; BEAN
IF FLAMETHROWER = 500 THEN LOCATE 23, 2: PRINT "Fire  :"; FIRE
LOCATE 23, 15: PRINT "Kills :"; HITS
LOCATE 23, 27: PRINT "Misses :"; MISSES
PUT (0, 25), BIG%, PSET
PUT (0, 21), BIG%, PSET
LINE (0, 21)-(319, 24), 0, BF
LINE (0, 173)-(319, 200), 0, BF
LOCATE 2, 2: PRINT "Bombs :"; BOMB
IF GUN = 1 AND CHARACTER <> 5 THEN LOCATE 23, 2: PRINT "Ammo  :"; AMMO
IF GUN = 1 AND CHARACTER = 5 THEN
LOCATE 23, 2: PRINT "Dust  :"; : COLOR 14: PRINT AMMO
END IF
IF GUN = 2 THEN LOCATE 23, 2: PRINT "Snot  :"; SNOT
IF BAKEDBEANS = 500 THEN LOCATE 23, 2: PRINT "Beans :"; BEAN
IF FLAMETHROWER = 500 THEN LOCATE 23, 2: PRINT "Fire  :"; FIRE
LOCATE 23, 15: PRINT "Kills :"; HITS
LOCATE 23, 27: PRINT "Misses :"; MISSES
PUT (0, 25), BIG%, PSET
PUT (0, 21), BIG%, PSET
LINE (0, 21)-(319, 24), 0, BF
LINE (0, 173)-(319, 200), 0, BF
LOCATE 2, 2: PRINT "Bombs :"; BOMB
IF GUN = 1 AND CHARACTER <> 5 THEN LOCATE 23, 2: PRINT "Ammo  :"; AMMO
IF GUN = 1 AND CHARACTER = 5 THEN
LOCATE 23, 2: PRINT "Dust  :"; : COLOR 14: PRINT AMMO
END IF
IF GUN = 2 THEN LOCATE 23, 2: PRINT "Snot  :"; SNOT
IF BAKEDBEANS = 500 THEN LOCATE 23, 2: PRINT "Beans :"; BEAN
IF FLAMETHROWER = 500 THEN LOCATE 23, 2: PRINT "Fire  :"; FIRE
LOCATE 23, 15: PRINT "Kills :"; HITS
LOCATE 23, 27: PRINT "Misses :"; MISSES
PUT (0, 25), BIG%, PSET
PUT (0, 21), BIG%, PSET
LINE (0, 21)-(319, 24), 0, BF
LINE (0, 173)-(319, 200), 0, BF
LOCATE 2, 2: PRINT "Bombs :"; BOMB
IF GUN = 1 AND CHARACTER <> 5 THEN LOCATE 23, 2: PRINT "Ammo  :"; AMMO
IF GUN = 1 AND CHARACTER = 5 THEN
LOCATE 23, 2: PRINT "Dust  :"; : COLOR 14: PRINT AMMO
END IF
IF GUN = 2 THEN LOCATE 23, 2: PRINT "Snot  :"; SNOT
IF BAKEDBEANS = 500 THEN LOCATE 23, 2: PRINT "Beans :"; BEAN
IF FLAMETHROWER = 500 THEN LOCATE 23, 2: PRINT "Fire  :"; FIRE
LOCATE 23, 15: PRINT "Kills :"; HITS
LOCATE 23, 27: PRINT "Misses :"; MISSES
PUT (0, 25), BIG%, PSET
PUT (0, 21), BIG%, PSET
LINE (0, 21)-(319, 24), 0, BF
LINE (0, 173)-(319, 200), 0, BF
LOCATE 2, 2: PRINT "Bombs :"; BOMB
IF GUN = 1 AND CHARACTER <> 5 THEN LOCATE 23, 2: PRINT "Ammo  :"; AMMO
IF GUN = 1 AND CHARACTER = 5 THEN
LOCATE 23, 2: PRINT "Dust  :"; : COLOR 14: PRINT AMMO
END IF
IF GUN = 2 THEN LOCATE 23, 2: PRINT "Snot  :"; SNOT
IF BAKEDBEANS = 500 THEN LOCATE 23, 2: PRINT "Beans :"; BEAN
IF FLAMETHROWER = 500 THEN LOCATE 23, 2: PRINT "Fire  :"; FIRE
LOCATE 23, 15: PRINT "Kills :"; HITS
LOCATE 23, 27: PRINT "Misses :"; MISSES
PUT (0, 25), BIG%, PSET
PUT (0, 21), BIG%, PSET
LINE (0, 173)-(319, 200), 0, BF
LOCATE 2, 2: PRINT "Bombs :"; BOMB
IF GUN = 1 AND CHARACTER <> 5 THEN LOCATE 23, 2: PRINT "Ammo  :"; AMMO
IF GUN = 1 AND CHARACTER = 5 THEN
LOCATE 23, 2: PRINT "Dust  :"; : COLOR 14: PRINT AMMO
END IF
IF GUN = 2 THEN LOCATE 23, 2: PRINT "Snot  :"; SNOT
IF BAKEDBEANS = 500 THEN LOCATE 23, 2: PRINT "Beans :"; BEAN
IF FLAMETHROWER = 500 THEN LOCATE 23, 2: PRINT "Fire  :"; FIRE
LOCATE 23, 15: PRINT "Kills :"; HITS
LOCATE 23, 27: PRINT "Misses :"; MISSES
RETURN

HITBOSS:
X1 = 104: X2 = 119: Y1 = 26: Y2 = 44
FOR I = 1 TO OUCH
LINE (X1 + 1, Y1 + 1)-(X2 - 1, Y2 - 1), 12, BF
X1 = X1 + 15: X2 = X2 + 15
NEXT
RETURN

GUNSHOOT:


X1 = 104: X2 = 119: Y1 = 3: Y2 = 21
FOR I = 1 TO OUCHYOU
LINE (X1, Y1)-(X2, Y2), 15, B
LINE (X1 + 1, Y1 + 1)-(X2 - 1, Y2 - 1), 12, BF
X1 = X1 + 15: X2 = X2 + 15
NEXT
GUNSHOOT = 0
RETURN

TALKBOSS:
PLAY "T155MFL8O3F#FF#FED#EFF#FF#FED#EF"
LOCATE 5, 1: PRINT STRING$(39, " ")
RETURN

KILLBOSS:
BOSS = 0
GUNKED = 0
GUNKED1 = 0
SNT = 0
SNT1 = 0
HIT = 0
HIT1 = 0
