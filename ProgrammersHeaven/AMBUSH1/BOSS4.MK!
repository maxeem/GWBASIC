LOCATE 15, 25: COLOR 27: PRINT "WARNING"
LOCATE 17, 24: COLOR 27: PRINT "FLAMMABLE"
COLOR 14

GOSUB TALKBOSS
X1 = 104: X2 = 119: Y1 = 26: Y2 = 44
CC = 195
FOR I = 1 TO 10
LINE (X1, Y1)-(X2, Y2), 15, B
LINE (X1 + 1, Y1 + 1)-(X2 - 1, Y2 - 1), CC, BF
X1 = X1 + 15: X2 = X2 + 15
CC = CC + 1.7
NEXT
PUT (X - 5, Y - 5), CIRC%, XOR:
PLAY "T155MBL8O1F#FF#FED#EFF#FF#FED#EF"
BOSSINKY: Q$ = INKEY$
IF GUN = 1 AND CHARGE < 10 AND Q$ = "c" THEN Charge1: GOTO BOSSINKY
IF OUCH >= 10 THEN GOTO KILLBOSS
IF OUCH >= 1 THEN GOSUB HITBOSS
IF OUCHYOU >= 10 THEN Gameover
IF GUNSHOOT >= SPD AND ACT = 2 THEN GOSUB GUNSHOOT
IF GUNSHOOT < SPD AND ACT = 2 THEN GUNSHOOT = GUNSHOOT + 1
IF GUNSHOOT >= SPD AND ACT = 3 THEN GOSUB GUNSHOOT
IF GUNSHOOT < SPD AND ACT = 3 THEN GUNSHOOT = GUNSHOOT + 1
LOCATE 1, 2: PRINT "Score :"; SCORE
LOCATE 2, 2: PRINT "Bombs :"; BOMB
IF GUN = 1 AND CHARACTER <> 5 THEN LOCATE 23, 2: PRINT "Ammo  :"; AMMO
IF GUN = 1 AND CHARACTER = 5 THEN
LOCATE 23, 2: PRINT "Dust  :"; : COLOR 14: PRINT AMMO
END IF
IF GUN = 2 THEN LOCATE 23, 2: PRINT "Snot  :"; SNOT
IF FLAMETHROWER = 500 THEN LOCATE 23, 2: PRINT "Fire  :"; FIRE
IF BAKEDBEANS = 500 THEN LOCATE 23, 2: PRINT "Beans :"; BEAN
IF BOWANDARROW = 500 THEN LOCATE 23, 2: PRINT "Arrows:"; ARROW
LOCATE 23, 15: PRINT "Kills :"; HITS
LOCATE 23, 27: PRINT "Misses :"; MISSES

N2:
    Q$ = UCASE$(Q$)
    DEF SEG = 0
    POKE 1047, Numlock
    DEF SEG
IF LEN(Q$) = 2 THEN GOTO NXT1
Q$ = LCASE$(Q$)
IF Q$ = " " THEN GOSUB FIRE
IF Q$ = "p" THEN GOSUB PAUSE
IF Q$ = "s" THEN Gunswitch
IF Q$ = "b" AND BOMB > 0 THEN GOSUB BOOM
IF Q$ = CHR$(27) THEN
GET (0, 21)-(319, 172), BIG%
LOCATE 10, 14: COLOR 15: PRINT "Are you sure ?"
DO
END$ = INKEY$
LOOP UNTIL END$ <> ""
PUT (0, 21), BIG%, PSET
IF UCASE$(LEFT$(END$, 1)) = "Y" THEN CLS : END
COLOR 14
GOTO BOSSINKY
END IF
GOTO BOSSINKY
NXT1:
IF LEN(Q$) = 2 THEN FK% = ASC(RIGHT$(Q$, 1))
IF FK% <> 71 AND FK% <> 72 AND FK% <> 73 AND FK% <> 75 AND FK% <> 77 THEN
IF FK% <> 79 AND FK% <> 80 AND FK% <> 81 THEN GOTO BOSSINKY
END IF
IF FK% = 71 AND X = 30 OR FK% = 71 AND Y = 30 THEN
PUT (X - 5, Y - 5), CIRC%, XOR: PUT (X - 5, Y - 5), CIRC%, XOR: GOTO BOSSINKY
END IF
IF FK% = 72 AND Y = 30 THEN
PUT (X - 5, Y - 5), CIRC%, XOR: PUT (X - 5, Y - 5), CIRC%, XOR: GOTO BOSSINKY
END IF
IF FK% = 73 AND X = 280 OR FK% = 73 AND Y = 30 THEN
PUT (X - 5, Y - 5), CIRC%, XOR: PUT (X - 5, Y - 5), CIRC%, XOR: GOTO BOSSINKY
END IF
IF FK% = 75 AND X = 30 THEN
PUT (X - 5, Y - 5), CIRC%, XOR:  PUT (X - 5, Y - 5), CIRC%, XOR: GOTO BOSSINKY
END IF
IF FK% = 77 AND X = 280 THEN
PUT (X - 5, Y - 5), CIRC%, XOR: PUT (X - 5, Y - 5), CIRC%, XOR: GOTO BOSSINKY
END IF
IF FK% = 79 AND X = 30 OR FK% = 79 AND Y = 160 THEN
PUT (X - 5, Y - 5), CIRC%, XOR: PUT (X - 5, Y - 5), CIRC%, XOR: GOTO BOSSINKY
END IF
IF FK% = 80 AND Y = 160 THEN
PUT (X - 5, Y - 5), CIRC%, XOR: PUT (X - 5, Y - 5), CIRC%, XOR: GOTO BOSSINKY
END IF
IF FK% = 81 AND X = 280 OR FK% = 81 AND Y = 160 THEN
PUT (X - 5, Y - 5), CIRC%, XOR: PUT (X - 5, Y - 5), CIRC%, XOR: GOTO BOSSINKY
END IF
IF FK% = 71 THEN
PUT (X - 5, Y - 5), CIRC%, XOR
X = X - 10: Y = Y - 10: PUT (X - 5, Y - 5), CIRC%, XOR
END IF
IF FK% = 72 THEN
PUT (X - 5, Y - 5), CIRC%, XOR: Y = Y - 10: PUT (X - 5, Y - 5), CIRC%, XOR
END IF
IF FK% = 73 THEN
PUT (X - 5, Y - 5), CIRC%, XOR
X = X + 10: Y = Y - 10: PUT (X - 5, Y - 5), CIRC%, XOR
END IF
IF FK% = 75 THEN
PUT (X - 5, Y - 5), CIRC%, XOR: X = X - 10: PUT (X - 5, Y - 5), CIRC%, XOR
END IF
IF FK% = 77 THEN
PUT (X - 5, Y - 5), CIRC%, XOR: X = X + 10: PUT (X - 5, Y - 5), CIRC%, XOR
END IF
IF FK% = 79 THEN
PUT (X - 5, Y - 5), CIRC%, XOR
X = X - 10: Y = Y + 10: PUT (X - 5, Y - 5), CIRC%, XOR
END IF
IF FK% = 80 THEN
PUT (X - 5, Y - 5), CIRC%, XOR: Y = Y + 10: PUT (X - 5, Y - 5), CIRC%, XOR
END IF
IF FK% = 81 THEN
PUT (X - 5, Y - 5), CIRC%, XOR
X = X + 10: Y = Y + 10: PUT (X - 5, Y - 5), CIRC%, XOR
END IF
GOTO BOSSINKY
PAUSE:
GET (0, 21)-(319, 172), BIG%
COLOR 15
LOCATE 10, 17: PRINT "PAUSE"
DO
AA$ = INKEY$
LOOP UNTIL UCASE$(AA$) = "P" OR UCASE$(AA$) = "S"
IF UCASE$(AA$) = "S" THEN PUT (0, 21), BIG%, PSET: Gunswitch: GOTO PAUSE
COLOR 14
PUT (0, 21), BIG%, PSET
RETURN

FIRE:
IF GUN = 1 AND AMMO = 0 THEN
PLAY "MBO6T255L64FG"
Charge1
RETURN
END IF
IF GUN = 2 AND SNOT = 0 THEN
PLAY "MBO6T255L64FG"
RETURN
END IF
IF BAKEDBEANS = 500 AND BEAN = 0 THEN
PLAY "MBO6T255L64FG"
RETURN
END IF
IF FLAMETHROWER = 500 AND FIRE = 0 THEN
PLAY "MBO6T255L64FG"
RETURN
END IF
IF BOWANDARROW = 500 AND ARROW = 0 THEN
PLAY "MBO6T255L64FG"
RETURN
END IF
FOR I = 1 TO CHARGE
PLAY "MBT255L64O0Cp64O0Dp64O0Cp64"
NEXT
IF CHARGE >= 1 THEN
GET (X - 20, Y - 20)-(X + 20, Y + 20), EXTRA%
HGLK = CHARGE
FOR I = 1 TO CHARGE + 10
CIRCLE (X, Y), HGLK + 10, HGLK + 21
HGLK = HGLK - 1
NEXT
PUT (X - 20, Y - 20), EXTRA%, PSET
END IF
GET (X - 5, Y - 5)-(X + 5, Y + 5), HIT%
CIRCLE (X, Y), 3, 18
CIRCLE (X, Y), 2, 18
