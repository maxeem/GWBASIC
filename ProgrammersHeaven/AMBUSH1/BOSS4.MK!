IF BAZOOKA = 500 THEN PRINT "Bazooka  ";
center 21, "On to the next level!!"
DO
AA$ = INKEY$
LOOP UNTIL AA$ <> ""
LEVEL = LEVEL + 1
CLS
center 12, "Please wait"
RETURN

