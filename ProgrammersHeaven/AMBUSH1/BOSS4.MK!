PLAY "MBT255L32O5CEDFEGFAGBA>C<B>DCED": GGGGG = 2
END IF
IF GGGGG = 2 THEN GOTO W
IF GUN = 1 THEN PLAY "MBO0T255L64CDCDCDCDCDCD"
IF GUN = 2 THEN PLAY "T255O1L64CDEFG"
IF BAKEDBEANS = 500 THEN
PLAY "t255mbl64o0dp55cp55dp55cp55dp55cp55dp55cp55dp55cp55dp55c"
END IF
IF FLAMETHROWER = 500 THEN PLAY "T255MBL64O1CO0AO0CO0AO1AO0C"
IF BOWANDARROW = 500 THEN PLAY "T255L32O1CDEFEDCO0CDCDC"
W:
GGGGG = 0
PUT (X - 5, Y - 5), HIT%, PSET
IF X <> EROW AND Y < 280 AND Y > 20 AND GUN = 2 OR Y <> ECOL THEN
IF Y < 280 AND Y > 20 AND GUN = 2 THEN
CIRCLE (X, Y), 2, 120
PAINT (X, Y), 120
FOR I = 1 TO 25
RX = INT(RND * 8) + 1
RY = INT(RND * 8) + 1
A = INT(RND * 2) + 1
IF RX <= 4 THEN RX = -RX
IF RY <= 4 THEN RY = -RX
IF RX >= 5 THEN RX = RX - 4
IF RY >= 5 THEN RY = RX - 4
IF A = 1 THEN PSET (X + RX, Y - RY), 120
IF A = 2 THEN PSET (X - RX, Y + RY), 120
NEXT
END IF
END IF
IF X <> EROW AND Y < 280 AND Y > 20 AND CHARACTER = 5 THEN
IF GUN = 1 OR Y <> ECOL AND Y < 280 AND Y > 20 AND CHARACTER = 5 THEN
IF GUN = 1 THEN
GET (X - 20, Y - 10)-(X + 20, Y + 10), EXTRA%
Q = 4
M = 27
FOR I = 1 TO 5
CIRCLE (X - 4, Y - 4), Q, M, 6.283184, 4.712388, 1
CIRCLE (X - 4, Y + 4), Q, M, 1.570796, 6.283184, 1
CIRCLE (X + 4, Y + 4), Q, M, 3.141592, 1.570796, 1
CIRCLE (X + 4, Y - 4), Q, M, 4.712388, 3.141592, 1
CIRCLE (X - 14, Y - 4), Q, M, 6.283184, 4.712388, 1
CIRCLE (X - 14, Y + 4), Q, M, 1.570796, 6.283184, 1
CIRCLE (X + 14, Y + 4), Q, M, 3.141592, 1.570796, 1
CIRCLE (X + 14, Y - 4), Q, M, 4.712388, 3.141592, 1
CIRCLE (X + 14, Y - 4), Q, M, 6.283184, 4.712388, 1
CIRCLE (X + 14, Y + 4), Q, M, 1.570796, 6.283184, 1
CIRCLE (X - 14, Y + 4), Q, M, 3.141592, 1.570796, 1
CIRCLE (X - 14, Y - 4), Q, M, 4.712388, 3.141592, 1
CIRCLE (X, Y), Q, M
CIRCLE (X - 9, Y), Q, M
CIRCLE (X + 9, Y), Q, M
Q = Q - 1
M = M + 1
NEXT
PUT (X - 20, Y - 10), EXTRA%, PSET
END IF
END IF
END IF
IF FLAMETHROWER = 500 THEN
PUT (X - 5, Y - 5), CIRC%
Q = 2.2: QQQ = .3: QQQQ = 33
FOR I = 1 TO 22
CIRCLE (X, Y + 1), QQQ, QQQQ, , , Q
QQQ = QQQ + .3: QQQQ = QQQQ + .5: Q = Q - .05
NEXT I
Q = 0: QQQ = .1: QQQQ = 36
FOR I = 1 TO 22
CIRCLE (X, Y), QQQ, QQQQ, , , Q
QQQ = QQQ + .39: QQQQ = QQQQ + .4: Q = Q + .1
NEXT I
PUT (X - 5, Y - 5), CIRC%
END IF
IF BAKEDBEANS = 500 THEN
PUT (X - 5, Y - 5), CIRC%
Q = 4
M = 25
FOR I = 1 TO 5
CIRCLE (X - 4, Y - 4), Q, M, 6.283184, 4.712388, 1
CIRCLE (X - 4, Y + 3), Q, M, 1.570796, 6.283184, 1
CIRCLE (X + 4, Y + 3), Q, M, 3.141592, 1.570796, 1
CIRCLE (X + 4, Y - 4), Q, M, 4.712388, 3.141592, 1
CIRCLE (X, Y), Q, M, , , 1
Q = Q - 1
M = M + 1.6
NEXT
NXT15:
PUT (X - 5, Y - 5), CIRC%
END IF
IF BOWANDARROW = 500 THEN
CIRCLE (X, Y), 2, 29
LINE (X - 3, Y - 3)-(X + 3, Y + 3), 22
LINE (X + 3, Y - 3)-(X - 3, Y + 3), 22
LINE (X - 2, Y - 3)-(X + 4, Y + 3), 19
LINE (X + 4, Y - 3)-(X - 2, Y + 3), 19
LINE (X - 4, Y - 3)-(X + 2, Y + 3), 25
LINE (X + 2, Y - 3)-(X - 4, Y + 3), 25
END IF
IF GUN = 1 AND X = 220 AND Y = 100 AND CHARGE >= 10 AND ACT = 2 THEN
GOSUB DRW2
END IF
IF FLAMETHROWER = 500 AND X >= 110 AND X <= 120 AND Y >= 70 THEN
IF Y <= 80 AND ACT = 3 THEN
CCC = CCC + 1
LINE (117, 42)-(115, 45), CCC
LINE (115, 45)-(116, 48), CCC
LINE (116, 48)-(117, 51), CCC
LINE (117, 51)-(115, 53), CCC
LINE (115, 53)-(114, 55), CCC
LINE (114, 55)-(115, 59), CCC
LINE (119, 60)-(117, 58), CCC
LINE (117, 58)-(118, 55), CCC
LINE (118, 55)-(119, 52), CCC
LINE (119, 52)-(120, 50), CCC
LINE (120, 50)-(123, 47), CCC
LINE (123, 47)-(123, 45), CCC
LINE (123, 45)-(121, 43), CCC
LINE (109, 44)-(112, 49), CCC
LINE (112, 49)-(112, 53), CCC
LINE (112, 53)-(109, 56), CCC
LINE (109, 56)-(112, 58), CCC
LINE (112, 58)-(112, 60), CCC
OUCH = OUCH + 1
GOSUB HITBOSS
END IF
END IF
IF GUN = 1 THEN AMMO = AMMO - 1
IF GUN = 2 THEN SNOT = SNOT - 1
IF FLAMETHROWER = 500 THEN FIRE = FIRE - 1
IF BAKEDBEANS = 500 THEN BEAN = BEAN - 1
IF BOWANDARROW = 500 THEN ARROW = ARROW - 1
IF GUN = 1 AND CHARACTER = 8 THEN AMMO = AMMO + 1
IF GUN = 2 AND CHARACTER = 8 THEN SNOT = SNOT + 1
IF FLAMETHROWER = 500 AND CHARACTER = 8 THEN FIRE = FIRE + 1
IF BAKEDBEANS = 500 AND CHARACTER = 8 THEN BEAN = BEAN + 1
IF BOWANDARROW = 500 AND CHARACTER = 8 THEN ARROW = ARROW + 1
IF GUN = 1 THEN CHARGE = -.2: Charge1
RETURN

BOOM:
GET (0, 21)-(319, 172), BIG%
FOR I = 1 TO 15
PLAY "MBT255L64O0Cp64O0Dp64O0Cp64"
NEXT
FOR NEWATTR = 0 TO 63
PALETTE 0, NEWATTR
FOR Q = 1 TO 25
NEXT
NEXT
FOR NEWATTR = 63 TO 0 STEP -1
PALETTE 0, NEWATTR
FOR Q = 1 TO 25
NEXT
NEXT
BOMBING = 1
BOMB = BOMB - 1
IF CHARACTER = 8 THEN BOMB = BOMB + 1
IF ACT = 1 THEN OUCH = OUCH + 2: ACT = 2: GOSUB DRW1
BOMBING = 0
RETURN

