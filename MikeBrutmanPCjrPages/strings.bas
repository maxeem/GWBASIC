100 REM Strings.BAS
110 REM M. Brutman, sometime in ancient history
120 REM Use this on a PCjr with Cart BASIC and 32K screen buffer
130 CLEAR ,,,32768!
140 KEY OFF
150 SCREEN 5:COLOR 7,0:CLS:RANDOMIZE VAL(MID$(TIME$,7))+VAL(MID$(TIME$,4,2))
160 FOR K=1 TO 5:X1=RND*220+50:X2=RND*220+50:Y1=RND*100+50:Y2=RND*100+50:D=INT(RND*2):E=RND*5+1
170 FOR A=1 TO RND*100+100:Y1=Y1+1:Y2=Y2-1:IF D=0 THEN X1=X1-E:X2=X2+E:GOTO 190
180 X1=X1+E:X2=X2-E
190 IF Y1<0 OR Y2<0 OR X1<0 OR X2<0 OR Y1>199 OR Y2>199 OR X1>319 OR X2> 319 THEN GOTO 210
200 LINE(X1,Y1)-(X2,Y2),INT(RND*15)+1:NEXT A
210 NEXT K:A$=INKEY$:IF A$=CHR$(27) THEN SCREEN 0,1:WIDTH 80:COLOR 15,0:CLS:END
220 FOR A=1 TO 4000:NEXT A:CLS:GOTO 160
